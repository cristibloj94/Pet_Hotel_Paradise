
@{
    ViewBag.Title = "Index";
}

@using Mandatory_Assignment.Models;
@using Mandatory_Assignment.Infrastructure;

<a href="/Admin/Dashboard">Back To The Dashboard</a>
<br />
<h2>All reservations</h2>

<table>
    <thead>
        <tr>
            <th>Species</th>
            <th>Name</th>
            <th>Arrival</th>
            <th>Owner</th>
            <th>Phone</th>
        </tr>
    </thead>
    @foreach (Reservation reservation in ViewBag.repository.Reservations)
    {
        <tr>
            <td>@reservation.specie</td>
            <td>@reservation.petName</td>
            <td>@reservation.startDate.ToShortDateString()</td>
            <td>@reservation.customer.firstname @reservation.customer.lastname</td>
            <td>@reservation.customer.phone</td>
        </tr>
    }

</table>