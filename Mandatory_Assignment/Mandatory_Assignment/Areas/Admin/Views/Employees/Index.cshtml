
@{
    ViewBag.Title = "Index";
}

@using Mandatory_Assignment.Models;
@using Mandatory_Assignment.Infrastructure;

<h2>Employee list</h2>

@foreach (Employee employee in ViewBag.repository.Employees)
{
    <h3>@employee.Firstname @employee.Lastname</h3>
    <p>
        ID number: @employee.PersonID<br />
        Initials: @employee.Initials.ToUpper()<br />
        Phone number: @employee.Phone<br />
        Active reservations: @employee.Reservations.Count<br />
    </p>
    <hr />
}